{
    "markdownlint.config": {
        "MD033": false,
        "MD036": false,
        "MD045": false,
        "MD051": false
    },
    "markdownConverter.ConversionQuality": 90,
    "markdownConverter.DefaultDateFormat": "dd.MM.yyyy",
    "markdownConverter.DateFormats": {
        "iso": "dd.MM.yyyy"
    },
    "markdownConverter.Document.HeaderFooterEnabled": true,
    "markdownConverter.Document.HeaderContent": {
        "Left": "EMF-Informatique",
        "Center": "<span class=\"pageNumber\"></span>/<span class=\"totalPages\"></span>",
        "Right": "{{ FormatDate CurrentDate \"dd.MM.yyyy\" }}"
    },
    "markdownConverter.Document.FooterContent": {
        "Left": "{{ Title }}",
        "Center": "<span class=\"pageNumber\"></span>/<span class=\"totalPages\"></span>",
        "Right": "{{ Author }}"
    },
    "markdownConverter.Document.Paper.PaperFormat": {
        "Format": "A4",
        "Orientation": "Portrait",
    },
    "markdownConverter.Document.Paper.Margin": {
        "Top": "1.5cm",
        "Bottom": "1.5cm",
        "Left": "1cm",
        "Right": "1cm"
    },
    // "markdownConverter.Assets.PictureInsertion": {
    //     "./res/EMF_logo_RVB_Info_long.png": "Include",
    // },
    "markdown-pdf.footerTemplate": "<div style='font-size:10px; text-align:center; width:100%;'><span class='title'></span> — Page <span class='pageNumber'></span> / <span class='totalPages'></span></div>",
    "markdown-pdf.headerTemplate": "<div style='font-size:10px; text-align:center; width:100%; color:#666;'>Diogo Da Silva © 2025 École des métiers de Fribourg</div>",
    "markdown-pdf.displayHeaderFooter": true,
    "markdown-pdf.margin.top": "30mm",
    "markdown-pdf.margin.bottom": "20mm"
    
    
}